<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.rocheikoaresalfabooks.alfabooks">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_alfabooks_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoginActivity"
            android:parentActivityName=".Activities.InicialActivity"></activity>
        <activity android:name=".Activities.InicialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CarrinhoActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".Activities.InicialActivity"></activity>

        <activity android:name=".Activities.PesquisarActivity"
            android:parentActivityName=".Activities.InicialActivity"></activity>

        <activity android:name=".Activities.SobreActivity"
            android:parentActivityName=".Activities.InicialActivity"></activity>

        <activity android:name=".Activities.ExibirLivroActivity"
            android:parentActivityName=".Activities.PesquisarActivity"></activity>

        <activity android:name=".Activities.PainelActivity"
            android:parentActivityName=".Activities.LoginActivity"></activity>

        <activity android:name=".Activities.CadastrarClienteActivity"
            android:parentActivityName=".Activities.PainelActivity"></activity>

        <activity android:name=".Activities.CadastrarFornecedorActivity"
            android:parentActivityName=".Activities.PainelActivity"></activity>

        <activity android:name=".Activities.CadastrarProdutoActivity"
            android:parentActivityName=".Activities.PainelActivity"></activity>

    </application>


</manifest>